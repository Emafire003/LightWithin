{
  "schemaVersion": 1,
  "id": "lightwithin",
  "version": "${version}",

  "name": "LightWithin",
  "description": "Adding new fancy magialish and player-unique powers, the 'InnerLights' which are going to activate when the player is in danger!",
  "authors": [
    "Emafire003"
  ],
  "contact": {
    "homepage": "https://github.com/Emafire003/LightWithin",
    "sources": "https://github.com/Emafire003/LightWithin",
    "issues": "https://github.com/Emafire003/LightWithin/issues"
  },

  "license": "GNU LGPL3",
  "icon": "assets/lightwithin/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "me.emafire003.dev.lightwithin.LightWithin"
    ],
    "client": [
      "me.emafire003.dev.lightwithin.client.LightWithinClient"
    ],
    "cardinal-components-entity": [
      "me.emafire003.dev.lightwithin.LightWithin"
    ]
  },
  "mixins": [
    "lightwithin.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.15.3",
    "minecraft": ">=1.20-",
    "java": ">=16",
    "fabric-key-binding-api-v1": "*"

  },
  "custom": {
    "cardinal-components": [
      "lightwithin:light_component",
      "lightwithin:summoned_by_component"
    ]
  },
  "recommends": {
    "coloredglowlib": ">=2.0.3"
  }
}